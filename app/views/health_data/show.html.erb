<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<h1><center>Health Tracking</center></h1>

<div class="row">
  <div class="col m3 offset-m3">
  <a class="waves-effect waves-light btn modal-trigger" href="#modal4">Record Today's Steps</a>

    <div id="modal4" class="modal">
      <div class="modal-content">
        <h4><center>Record Today's Steps</center></h4>
        <p><%= render "steps/form" %></p>
      </div>
    </div>
  </div>

  <a class="waves-effect waves-light btn modal-trigger" href="#modal5" id="new-sleep">Record Today's Sleep</a>

    <div id="modal5" class="modal">
      <div class="modal-content">
        <h4><center>Record Today's Sleep Hours</center></h4>
        <p><%= render "sleeps/form" %></p>
      </div>
    </div>
</div>

  <div class="row healthdash">
    <div class="col m6">
      <h4><center>Today's Activity</center></h4>
      <p><center><%= render "todaysteps" %></center></p>
        <%= column_chart current_user.steps.group_by_day(:date_of_steps, format: "%b %e %Y").count %>
    </div>

  <div class="col m6">
    <h4><center>Hours Slept Today</center></h4>
    <p><center><%= render "todayslepthours" %></center></p>
      <%= column_chart current_user.sleeps.group_by_day(:date_of_sleep, format: "%b %e %Y").count %>
  </div>
</div>
